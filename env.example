# AI Provider Configuration
# You can use either OpenAI, Anthropic, or both for redundancy

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Application Configuration
NEXT_PUBLIC_APP_NAME="AI Review Response Generator"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Encryption key for sensitive data (generate a strong random key)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Rate Limiting Configuration
# Maximum requests per minute for regular API endpoints
MAX_REQUESTS_PER_MINUTE=30

# Maximum requests per minute for bulk operations
MAX_BULK_REQUESTS_PER_MINUTE=5

# Optional: Analytics (if you want to add them later)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Optional: Database (for future features)
# DATABASE_URL=your_database_url_here

# Optional: Redis (for production rate limiting)
# REDIS_URL=your_redis_url_here 