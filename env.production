# Production Environment Configuration
# Copy this file to .env.production.local and fill in your actual values

# AI Provider Configuration
OPENAI_API_KEY=sk-your-production-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-production-anthropic-api-key-here

# Application Configuration
NEXT_PUBLIC_APP_NAME="AI Review Response Generator"
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Security Configuration
ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com
ENCRYPTION_KEY=your-production-32-byte-encryption-key-here
MAX_REQUESTS_PER_MINUTE=30
MAX_BULK_REQUESTS_PER_MINUTE=5

# Monitoring and Analytics
MONITORING_ENDPOINT=https://your-monitoring-service.com/api/events
NEXT_PUBLIC_GA_ID=your_production_google_analytics_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_production_mixpanel_token

# Database Configuration (for future features)
DATABASE_URL=postgresql://user:password@production-db-host:5432/production_db

# Redis Configuration (for production rate limiting)
REDIS_URL=redis://production-redis-host:6379

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# Performance Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true 